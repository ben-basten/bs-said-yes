{
  "name": "nuxt-starter",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "pnpm generate:types && nuxt build",
    "dev": "nuxt dev",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "generate": "nuxt generate",
    "generate:types": "graphql-codegen --require dotenv/config --config codegen.ts",
    "generate:types:watch": "pnpm generate:types --watch",
    "lint": "eslint .",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "prepare": "husky",
    "typecheck": "nuxt typecheck",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:seed": "tsx --env-file=.env ./scripts/seed.ts",
    "db:seed:prd": "tsx --env-file=.env ./scripts/seed.ts guests.csv",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@neondatabase/serverless": "^1.0.2",
    "@nuxt/fonts": "^0.11.4",
    "@nuxt/image": "^2.0.0",
    "@pinia/nuxt": "0.11.3",
    "@tailwindcss/vite": "^4.1.18",
    "contentful-rich-text-vue-renderer": "^3.2.1",
    "drizzle-orm": "^0.45.1",
    "gqlmin": "^0.3.1",
    "graphql-request": "^7.4.0",
    "gsap": "^3.14.2",
    "nuxt": "^4.3.0",
    "nuxt-auth-utils": "^0.5.27",
    "pinia": "^3.0.4",
    "reka-ui": "^2.7.0",
    "tailwindcss": "^4.1.18",
    "vue": "^3.5.26",
    "vue-router": "^4.6.4",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@contentful/rich-text-types": "^17.2.5",
    "@graphql-codegen/cli": "^6.1.1",
    "@nuxt/eslint": "^1.15.1",
    "@parcel/watcher": "^2.5.6",
    "@types/node": "^24.10.13",
    "drizzle-kit": "^0.31.9",
    "eslint": "^10.0.0",
    "fast-csv": "^5.0.5",
    "husky": "^9.1.7",
    "nano-staged": "^0.9.0",
    "prettier": "^3.8.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vue-tsc": "^3.2.0"
  },
  "nano-staged": {
    "*.{js,mjs,jsx,ts,vue}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  },
  "packageManager": "pnpm@10.26.2+sha512.0e308ff2005fc7410366f154f625f6631ab2b16b1d2e70238444dd6ae9d630a8482d92a451144debc492416896ed16f7b114a86ec68b8404b2443869e68ffda6"
}
